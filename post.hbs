{{!< default}}

{{#post}}

  <article class="post-container post-container--single">
  
    <header class="post-header">
      {{#if image}}<img id="post-image" src={{image}} alt="{{{title}}}" style="max-width: 100%; margin: 0 auto; border-radius: 3px; text-align: center; padding-bottom: 1em;">{{/if}}
      <h2 class="post-title">{{{title}}}</h2>
    </header>

    <section class="{{post_class}}">
      {{content}}
    </section>
    
    <div class="post-meta">
        <time datetime="{{date format="MMMM Do, YYYY"}}" class="post-meta__date date">{{date format="MMMM Do, YYYY"}}</time> &#8226; <span class="post-meta__tags tags">{{tags prefix="Filed in "}}</span>
        <!--<span class="post-meta__author author"><img src="{{author.image}}" alt="profile image for {{author.name}}" class="avatar post-meta__avatar" /> by {{author.name}}</span>-->
      </div>

  </article>

   <!-- {{> comments}} -->

{{/post}}
